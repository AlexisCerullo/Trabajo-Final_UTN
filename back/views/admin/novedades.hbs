<div class="contenedor holder">
    <div class="novedades">
        <div class="start">
            <h2>Hola {{persona}}!</h2>
        </div>

        <div>
            <h3>Listado de Novedades</h3>
        </div>

        <div class="nueva">
            <a class="nueva-boton" href="/admin/novedades/agregar">+ Nueva</a>
        </div>

        <div>
            <table>
                <thead>
                    <tr>
                        <th class="tabla-start" scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th class="tabla-imagen" scope="col">Imagen</th>
                        <th class="tabla-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each novedades}}

                    <tr class="tabla-contenido">
                        <th class="tabla-start" scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="tabla-imagen">{{{imagen}}}</td>
                        <td class="tabla-end">
                            <a class="tabla-boton" href="/admin/novedades/editar/{{id}}">Editar</a>
                            <a class="tabla-boton" href="/admin/novedades/borrar/{{id}}">Borrar</a>
                        </td>
                    </tr>

                    {{/each}}
                    
                </tbody>
            </table>
        </div>

        <div class="end">
            <a class="cierre-boton" href="/admin/login/logout">Cerrar sesi√≥n</a>
        </div>
    </div>
</div>